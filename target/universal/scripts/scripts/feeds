#!/bin/sh

realpath () {
(
  TARGET_FILE="$1"

  cd "$(dirname "$TARGET_FILE")"
  TARGET_FILE=$(basename "$TARGET_FILE")

  COUNT=0
  while [ -L "$TARGET_FILE" -a $COUNT -lt 100 ]
  do
      TARGET_FILE=$(readlink "$TARGET_FILE")
      cd "$(dirname "$TARGET_FILE")"
      TARGET_FILE=$(basename "$TARGET_FILE")
      COUNT=$(($COUNT + 1))
  done

  if [ "$TARGET_FILE" = "." -o "$TARGET_FILE" = ".." ]; then
    cd "$TARGET_FILE"
    TARGET_FILEPATH=
  else
    TARGET_FILEPATH=/$TARGET_FILE
  fi

  echo "$(pwd -P)/$TARGET_FILE"
)
}

# Allow user and template_declares (see below) to add java options.
addJava () {
  java_opts="$java_opts $1"
}

# Allow user to specify java options. These get listed first per bash-template.
if [ -n "$JAVA_OPTS" ]
then
  addJava "$JAVA_OPTS"
fi

# Loads a configuration file full of default command line options for this script.
loadConfigFile() {
  cat "$1" | sed '/^\#/d' | sed 's/^-J-X/-X/' | tr '\r\n' ' '
}


real_script_path="$(realpath "$0")"
app_home="$(realpath "$(dirname "$real_script_path")")"
lib_dir="$(realpath "${app_home}/../lib")"

app_mainclass="com.mj.users.Server"

script_conf_file="${app_home}/../conf/application.ini"
app_classpath="$lib_dir/feeds.feeds-0.0.1.jar:$lib_dir/org.scala-lang.scala-library-2.11.8.jar:$lib_dir/com.typesafe.akka.akka-http-spray-json-experimental_2.11-2.0-M1.jar:$lib_dir/com.typesafe.akka.akka-http-experimental_2.11-2.0-M1.jar:$lib_dir/com.typesafe.akka.akka-http-core-experimental_2.11-2.0-M1.jar:$lib_dir/com.typesafe.akka.akka-parsing-experimental_2.11-2.0-M1.jar:$lib_dir/com.typesafe.akka.akka-stream-experimental_2.11-2.0-M1.jar:$lib_dir/io.spray.spray-json_2.11-1.3.2.jar:$lib_dir/com.typesafe.akka.akka-slf4j_2.11-2.4.0.jar:$lib_dir/org.slf4j.slf4j-api-1.7.12.jar:$lib_dir/com.typesafe.scala-logging.scala-logging_2.11-3.1.0.jar:$lib_dir/org.scala-lang.scala-reflect-2.11.8.jar:$lib_dir/org.reactivemongo.reactivemongo_2.11-0.12.7.jar:$lib_dir/org.reactivemongo.reactivemongo-bson-macros_2.11-0.12.7.jar:$lib_dir/org.reactivemongo.reactivemongo-bson_2.11-0.12.7.jar:$lib_dir/org.reactivemongo.reactivemongo-shaded-0.12.7.jar:$lib_dir/com.typesafe.play.play-iteratees_2.11-2.6.1.jar:$lib_dir/org.scala-stm.scala-stm_2.11-0.8.jar:$lib_dir/commons-codec.commons-codec-1.10.jar:$lib_dir/org.apache.logging.log4j.log4j-api-2.5.jar:$lib_dir/org.reactivemongo.reactivemongo-play-json_2.11-0.12.7-play26.jar:$lib_dir/joda-time.joda-time-2.8.1.jar:$lib_dir/org.neo4j.driver.neo4j-java-driver-1.0.4.jar:$lib_dir/com.typesafe.akka.akka-stream-kafka_2.11-0.11-M2.jar:$lib_dir/org.scala-lang.modules.scala-java8-compat_2.11-0.7.0.jar:$lib_dir/org.apache.kafka.kafka-clients-0.9.0.1.jar:$lib_dir/org.xerial.snappy.snappy-java-1.1.1.7.jar:$lib_dir/net.jpountz.lz4.lz4-1.2.0.jar:$lib_dir/com.typesafe.akka.akka-cluster_2.11-2.5.16.jar:$lib_dir/com.typesafe.akka.akka-remote_2.11-2.5.16.jar:$lib_dir/com.typesafe.akka.akka-actor_2.11-2.5.16.jar:$lib_dir/com.typesafe.config-1.3.3.jar:$lib_dir/com.typesafe.akka.akka-stream_2.11-2.5.16.jar:$lib_dir/com.typesafe.akka.akka-protobuf_2.11-2.5.16.jar:$lib_dir/org.reactivestreams.reactive-streams-1.0.2.jar:$lib_dir/com.typesafe.ssl-config-core_2.11-0.2.4.jar:$lib_dir/org.scala-lang.modules.scala-parser-combinators_2.11-1.1.1.jar:$lib_dir/io.netty.netty-3.10.6.Final.jar:$lib_dir/io.aeron.aeron-driver-1.9.3.jar:$lib_dir/io.aeron.aeron-client-1.9.3.jar:$lib_dir/org.agrona.agrona-0.9.18.jar:$lib_dir/com.typesafe.akka.akka-cluster-tools_2.11-2.5.16.jar"


# If a configuration file exist, read the contents to $opts
[ -f "$script_conf_file" ] && opts=$(loadConfigFile "$script_conf_file")

exec java $java_opts -classpath $app_classpath $opts $app_mainclass $@
